{
  "name": "vue-client-only",
  "version": "1.0.0",
  "description": "A minimal Vue 3 component for client-side only rendering in SSR applications",
  "keywords": [
    "vue",
    "vue3",
    "ssr",
    "client-only",
    "hydration"
  ],
  "author": "Tony",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t2ym5u/vue-client-only.git"
  },
  "homepage": "https://github.com/t2ym5u/vue-client-only#readme",
  "bugs": {
    "url": "https://github.com/t2ym5u/vue-client-only/issues"
  },
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "./dist/vue-client-only.umd.js",
  "module": "./dist/vue-client-only.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-client-only.es.js",
      "require": "./dist/vue-client-only.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:dist": "vite --mode dist",
    "build": "vite build && vue-tsc -p tsconfig.build.json",
    "build:types": "vue-tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "format:check": "biome format .",
    "format:write": "biome format --write .",
    "lint:check": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.5.27"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vite": "beta",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.17",
    "vue": "^3.5.27",
    "vue-tsc": "^3.2.2"
  }
}
